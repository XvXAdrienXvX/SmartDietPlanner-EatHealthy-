@{
    Layout = null;
}

<form enctype="multipart/form-data">

    <div class="modal-header">

        <h4 class="modal-title">Daily Activity</h4>
        <button type="button" class="close" id="toggleActModal" onclick="stopLoad()" data-dismiss="modal">&times;</button>

    </div>
    <div class="modal-body">
        <div class="container-fluid">



            <div class="row">

                <div class="col-md-6"><h2 style="color: #2196F3;">Please choose activity</h2></div>

                <div class="col-md-12">
                    <div class="dropdown-container" style="color:black;width: 100%;">
                        <div class="dropdown-button noselect">
                            <div class="dropdown-label">Activities</div>
                            <div class="dropdown-quantity">(<span class="quantity">None</span>)</div>
                            <i class="fa fa-filter"></i>
                        </div>
                        <div class="dropdown-list" style="display: none;background:white;">
                            <input type="search" style="width:100%;" placeholder="Search Activity" class="dropdown-search" />
                            <ul class="ActivitiesList"></ul>
                        </div>
                    </div>
                </div>
            </div>
            <p class="col-lg-12" id="EmptyFieldErr" style="color: red">
            </p>
            <div id="ActFields">

            </div>

            <br>
        </div>

    </div>
    
    <div class="modal-footer col-lg-12">
        <input type="button"  onclick="SetActivities()" value="Submit" />
    </div>
</form>
<script src="~/js/ModelJS.js"></script>
<script>
    loaded();
    var spin = document.getElementById("spinner");
    spin.innerHTML = "";

</script>