
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error </title>
    <style>
        body {
            background-color: #ececec;
            color: rgb(68, 68, 68);
            text-align: center;
        }
     
                
                

                .iconBackground {
                    background-color: #D86344;
                    margin: 0 auto;
                    width: 40px;
                    height: 40px;
                    border-radius: 100%;
                }

                .iconBarLeft {
                    width: 27px;
                    height: 4px;
                    position: relative;
                    top: 45%;
                    margin-left: 7px;
                    background-color: #ffffff;
                    transform: rotate(45deg);
                    border-radius: 1px;
                }

                .iconBarRight {
                    width: 27px;
                    height: 4px;
                    position: relative;
                    top: 35%;
                    margin-left: 7px;
                    background-color: #ffffff;
                    transform: rotate(-45deg);
                    border-radius: 1px;
                }




        * {
          font-family: 'Roboto', sans-serif;
        }
        .container {
          position: absolute;
          top:50%;
          left:50%;
          margin-left: -65px;
          margin-top: -20px;
          width: 130px;
          height: 40px;
          text-align: center;
        }
        #button {
            outline: none;
            height: 40px;
            text-align: center;
            width: 130px;
            border-radius: 40px;
            background: #fff;
            border: 2px solid #D86344;
            color: #D86344;
            letter-spacing: 1px;
            text-shadow: 0;
            font-size: 12px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.25s ease;
        }
        #button:active {
            letter-spacing: 2px;
        }
            #button:after {
                content: "Back";
            }
            #button:hover {
                color: white;
                background: #D86344;
            }

        #buttonLogin {
            outline: none;
            height: 40px;
            text-align: center;
            width: 130px;
            border-radius: 40px;
            background: #fff;
            border: 2px solid #D86344;
            color: #D86344;
            letter-spacing: 1px;
            text-shadow: 0;
            font-size: 12px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.25s ease;
        }

            #buttonLogin:active {
                letter-spacing: 2px;
            }

            #buttonLogin:after {
                content: "Login";
            }

            #buttonLogin:hover {
                color: white;
                background: #D86344;
            }



        .onclic {
            width: 40px;
            border-color: #bbbbbb;
            border-width: 3px;
            font-size: 0;
            border-left-color: #1ECD97;
            animation: rotating 2s 0.25s linear infinite;
            
        
        }
        .onclic:after {
            content: "";
        }
            .onclic:hover {
                color: #D86344;
                background: white;
            }
        .validate {
            font-size: 13px;
            color: white;
            background: #D86344;
        }

    </style>

</head>
<body>
    <div style="display:block; padding-top:108px;">
        <div class="iconBackground">
            <div class="iconBarLeft"></div>
            <div class="iconBarRight"></div>
        </div>
        <div>
            <h1>Error</h1>
        </div>
        <div>
            Unable to connect to Services.
        </div>
        <div>
            Please check your internet connection or try again later.
        </div>
        <div class="container">

            @{ if (ViewBag.set == "True")
                {
                    <text>   <a asp-action="@ViewBag.actionName" asp-route-id="@ViewBag.controllerName"><button id="button"></button></a> </text>
                }

                else
                {
                    <text>   <a asp-action="@ViewBag.actionName"><button id="buttonLogin"></button></a> </text>


                }
            }
        </div>
    </div>
</body>
</html>
