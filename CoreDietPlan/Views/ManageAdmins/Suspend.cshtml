@model CoreDietPlan.Models.AdminsTable

@{
    ViewData["Title"] = "Suspend";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<body>


    <h4>Change Status</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Suspend">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="AdminName" class="control-label"></label>
                    <input asp-for="AdminName" class="form-control" />
                    <span asp-validation-for="AdminName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Status">Change account status:</label>
                    <select name="Status" class="form-control" id="Status">
                        <option>Active</option>
                        <option>Suspend</option>
                  
                    </select>
                </div>  

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>


</body>
